{
  "name": "vite-plugin-vue-preview",
  "type": "module",
  "version": "0.1.0",
  "private": false,
  "description": "a vite plugin for vue preview",
  "author": "liting <luz.liting@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/liting-yes/vite-plugin-vue-preview#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/liting-yes/vite-plugin-vue-preview.git"
  },
  "keywords": [
    "vite",
    "vue",
    "preview"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./dist/style.css": "./dist/style.css",
    "./style.css": "./dist/style.css"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "eslint --fix .",
    "commit": "git-cz",
    "release": "release-it",
    "build": "vite build",
    "prepare": "git config core.hooksPath .git/hooks/ && npx simple-git-hooks",
    "test-vue:dev": "pnpm run -C demo/vue dev"
  },
  "peerDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "vite": "^4.1.2",
    "vue": "^3.2.47"
  },
  "dependencies": {
    "@vue/repl": "^1.3.2"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.34.1",
    "@babel/types": "^7.20.7",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@commitlint/cz-commitlint": "^17.4.2",
    "@release-it/conventional-changelog": "^5.1.1",
    "@tsconfig/node-lts-strictest": "^18.12.1",
    "@types/codemirror": "^5.60.7",
    "@types/node": "^18.14.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "codemirror": "^5.65.11",
    "commitizen": "^4.3.0",
    "eslint": "^8.32.0",
    "hash-sum": "^2.0.0",
    "inquirer": "8",
    "lint-staged": "^13.1.0",
    "release-it": "^15.6.0",
    "sass": "^1.58.3",
    "simple-git-hooks": "^2.8.1",
    "sucrase": "^3.29.0",
    "vite": "^4.1.2",
    "vite-plugin-dts": "2.0.0-beta.1",
    "vue": "^3.2.47"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint  --edit ''"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,json}": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "requireBranch": "main"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "chore",
              "hidden": true
            },
            {
              "type": "docs",
              "hidden": true
            },
            {
              "type": "style",
              "hidden": true
            },
            {
              "type": "refactor",
              "hidden": true
            },
            {
              "type": "perf",
              "hidden": true
            },
            {
              "type": "test",
              "hidden": true
            }
          ]
        },
        "infile": "CHANGELOG.md",
        "header": "# Changelog",
        "ignoreRecommendedBump": true,
        "strictSemVer": false
      }
    },
    "hooks": {
      "after:bump": "npx unbuild",
      "after:git:release": "git push origin HEAD"
    }
  }
}
